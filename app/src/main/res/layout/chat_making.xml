<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chat_room_background"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@color/chat_room" >

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/chaticon_back"
            android:onClick="onExitClicked"
            android:id="@+id/imageButton10"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView32"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20dp"
            android:text="방만들기" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView33" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:background="@color/chat_room_spinner"
        android:layout_gravity="center_horizontal"
        android:id="@+id/spinner_big_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_bar"
            android:padding="7dp"
            android:background="@color/chat_room_spinner"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/relativeLayout4">

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout5"
            android:padding="7dp"
            android:background="@color/chat_room_spinner"
            android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/relativeLayout"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/timeView"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@color/white"
                    android:id="@+id/smallRelaiveLayout"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout6"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingBottom="5dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/textView21"
                            android:text="@string/chat_making_departure"
                            android:paddingLeft="5dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/textView23"
                            android:paddingLeft="5dp"
                            android:text="@string/chat_making_arrival" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/textView25"
                            android:text="@string/chat_making_crew_num"
                            android:paddingLeft="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearLayout7"
                        android:layout_below="@+id/linearLayout6"
                        android:orientation="horizontal"
                        android:gravity="center" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="2"
                            android:orientation="horizontal" />

                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:id="@+id/departure_spinner"
                            android:spinnerMode="dropdown" />

                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="11"
                            android:id="@+id/arrival_spinner"
                            android:spinnerMode="dropdown" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/textView24"
                            android:text=" "
                            android:paddingLeft="5dp" />

                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="10"
                            android:id="@+id/crew_num_spinner"
                            android:spinnerMode="dropdown" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:orientation="horizontal" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="출발 날짜: "
                    android:id="@+id/dateView"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Linear"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="출발 시간을 선택해주세요"
            android:id="@+id/textView27"
            android:gravity="center" />

    </LinearLayout>

    <TimePicker
        android:layout_width="448dp"
        android:layout_height="112dp"
        android:id="@+id/timePicker1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.38"
        android:longClickable="false"
        android:clickable="true"
        android:timePickerMode="spinner"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_weight="0.42"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:touchscreenBlocksFocus="false">

        <Button
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:id="@+id/create_chat_room"
            android:onClick="makingNewChatRoom"
            android:background="@drawable/car_room_make"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="2dp" />

    </RelativeLayout>


</LinearLayout>