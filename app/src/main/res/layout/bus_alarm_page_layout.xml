<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alarm_page_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="한동 버스 알람"
            android:id="@+id/textView15"
            android:layout_marginTop="73dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/alarm_3"
            android:layout_below="@+id/textView15"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="현재시간"
            android:id="@+id/now_time"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="선택시간"
            android:id="@+id/select_time"
            android:layout_marginTop="27dp"
            android:layout_below="@+id/now_time"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="몇 분 전 알람"
            android:id="@+id/before_minute"
            android:layout_below="@+id/select_time"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="23dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/line"
            android:background="@color/alarm_page_line"
            android:layout_marginTop="38dp"
            android:layout_below="@+id/before_minute"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="38dp"
            android:id="@+id/linearLayout4"
            android:layout_below="@+id/line"
            android:layout_centerHorizontal="true">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/turnoff"
                android:background="@drawable/bus_check"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="종료"
            android:id="@+id/turnoff123"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/linearLayout4"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>