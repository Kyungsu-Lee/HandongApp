<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_selector_yasick">
    <FrameLayout
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="7dp">
        <ImageView
            android:id="@+id/hgutube_row_image"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/hgutube_row_runtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="#80000000"
            android:textColor="@color/white"
            android:textSize="13dp"
            android:padding="3dp"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/hgutube_row_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="15dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/mildblack"/>
        <TextView
            android:id="@+id/hgutube_row_writer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_marginBottom="1dp"
            android:textColor="@color/mildblack"/>
        <TextView
            android:id="@+id/hgutube_row_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_gravity="right"
            android:layout_margin="2dp"
            android:textColor="@color/mildblack"/>
    </LinearLayout>

</LinearLayout>