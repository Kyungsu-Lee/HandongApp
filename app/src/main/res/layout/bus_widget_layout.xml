<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_bus_widget"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_actionbar_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/bus_widget_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="3"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:scaleType="fitCenter"
            android:src="@drawable/main_bus" />

        <TextView
            android:id="@+id/bus_widget_title_dst"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:singleLine="true"
            android:text="행선지"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/bus_widget_title_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:singleLine="true"
            android:text="(평/주)"
            android:textColor="@color/white"
            android:textSize="12dp" />


        <ImageView
            android:id="@+id/bus_widget_update"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:src="@drawable/tt_update_selector"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <TextView
        android:id="@+id/bus_widget_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="3dp"
        android:background="@color/white" />

    <LinearLayout
        android:id="@+id/bus_widget_station"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bus_widget_station1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="장소1"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/bus_widget_station2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="장소2"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/bus_widget_station3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="장소3"
            android:textSize="13dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bus_widget_time1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bus_widget_time1_tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="-"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/bus_widget_time1_tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="-"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/bus_widget_time1_tv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="-"
            android:textSize="11dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bus_widget_time2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bus_widget_time2_tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="-"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/bus_widget_time2_tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="-"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/bus_widget_time2_tv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="-"
            android:textSize="11dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bus_widget_time3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bus_widget_time3_tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="-"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/bus_widget_time3_tv2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="-"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/bus_widget_time3_tv3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="-"
            android:textSize="11dp" />
    </LinearLayout>
</LinearLayout>
