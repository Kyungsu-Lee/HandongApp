<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ghost.android.ghosthguapp.hgushop.HgushopBetweenPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hgushop_map_background">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/hgushop_between_buttons"
            android:layout_marginBottom="70dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/hgushop_between_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/hgushop"
                android:background="#00FFFFFF"/>
            <TextView
                android:id="@+id/hgushop_between_shopname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hgushop_title"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_toRightOf="@+id/hgushop_between_icon"
                android:layout_centerVertical="true"/>

        </RelativeLayout>t>

        <LinearLayout
            android:id="@+id/hgushop_between_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <ImageButton
                android:id="@+id/hgushop_between_left_image"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/hgushop_arrow"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:rotation="180"/>
            <Button
                android:id="@+id/hgushop_between_left"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="3"
                android:text="@string/hgushop_between_to_map"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:background="?android:attr/selectableItemBackground"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"></RelativeLayout>
            <Button
                android:id="@+id/hgushop_between_right"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="3"
                android:text="@string/hgushop_between_to_shop"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:background="?android:attr/selectableItemBackground"/>
            <ImageButton
                android:id="@+id/hgushop_between_right_image"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/hgushop_arrow"
                android:background="#00000000"/>

        </LinearLayout>
        <TextView
            android:id="@+id/hgushop_between_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hgushop_between_buttons"
            android:layout_margin="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:gravity="center"/>

    </RelativeLayout>



</RelativeLayout>
