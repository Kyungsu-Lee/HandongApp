<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/ghost_actionbar_layout"
    android:layout_gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ghost_actionbar_title"
        android:layout_centerInParent="true"
        android:text="@string/hello_world"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/ghost_actionbar_logo"
        android:src="@drawable/ic_launcher"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ghost_actionbar_title"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/ghost_actionbar_title" />
</RelativeLayout>