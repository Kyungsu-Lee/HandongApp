<?xml version="1.0"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@color/chat_room" >

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/chaticon_back"
            android:onClick="onExitClicked"
            android:id="@+id/imageButton7"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView31"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="20dp"
            android:text="날짜 선택"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="onMyRoomClicked"
            android:background="@drawable/btn_mypage"
            android:id="@+id/imageButton9"
            android:baselineAlignBottom="false"
            android:cropToPadding="false"
            android:adjustViewBounds="false"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp" />
    </LinearLayout>

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_showOtherDates="true"
        app:mcv_arrowColor="@color/chat_room"

        />
</LinearLayout>
