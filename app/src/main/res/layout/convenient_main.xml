<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/green"
        android:padding="10dp">

        <TextView
            android:id="@+id/conv_actionbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="편의정보"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/conv_actionbar_title"
            android:scaleType="fitCenter"
            android:src="@drawable/conv" />
    </RelativeLayout>

    <TextView
        android:id="@+id/conv_actionbar_line"
        android:layout_width="match_parent"
        android:layout_below="@id/relativeLayout2"
        android:layout_height="1dp"
        android:background="@color/text_grey" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/convenient_main_ll"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/spring"
        android:layout_below="@+id/conv_actionbar_line" />

    <LinearLayout
        android:id="@+id/convenient_main_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_run"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/tab_selector_con"
            android:text="운영시간"
            android:textColor="@drawable/tab_text_selector_con"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btn_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/tab_selector_con"
            android:text="전화번호부"
            android:textColor="@drawable/tab_text_selector_con"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btn_prof"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/tab_selector_con"
            android:text="교수님연락처"
            android:textColor="@drawable/tab_text_selector_con"
            android:textSize="17dp" />
    </LinearLayout>
</RelativeLayout>
