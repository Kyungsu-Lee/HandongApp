<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/phone_get_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:textSize="17dp" />

    <LinearLayout
        android:id="@+id/tt_edit_dialog_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/tt_edit_dialog_tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="전화번호 : "
            android:textSize="12dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/tt_edit_dialog_no1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:maxLength="3"
                android:singleLine="true"
                android:inputType="number"
                android:lines="1"
                android:imeOptions="actionNext"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/textView28"
                android:layout_weight="2"
                android:textSize="25dp"
                android:gravity="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tt_edit_dialog_no2"
                android:layout_weight="1.5"
                android:gravity="center"
                android:maxLength="4"
                android:singleLine="true"
                android:inputType="number"
                android:lines="1"
                android:imeOptions="actionNext"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/textView30"
                android:layout_weight="2"
                android:textSize="25dp"
                android:gravity="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tt_edit_dialog_no3"
                android:layout_weight="1.5"
                android:gravity="center"
                android:maxLength="4"
                android:singleLine="true"
                android:inputType="number"
                android:lines="1"
                android:imeOptions="actionDone"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/tt_edit_dialog_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tt_edit_close_selector" />

    </LinearLayout>

</LinearLayout>
