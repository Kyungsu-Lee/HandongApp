<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--The theme applied to the application or activity -->
    <style name="YasickActionBarTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/YasickActionBar</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:itemBackground">@color/white</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/YasickActionBar</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <!-- ActionBar styles -->
    <style name="YasickActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/chat_color</item>
        <item name="android:titleTextStyle">@style/YasickActionBarTitleText</item>

        <!-- Support library compatibility -->
        <item name="background">@color/chat_color</item>
        <item name="titleTextStyle">@style/YasickActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="YasickActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

</resources>